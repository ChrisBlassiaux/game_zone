<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.unit_price_ht %></td>
        <td><%= link_to 'Show', item_path(item) %></td>

        <td>
        
          <%= form_for @order_item, remote: true  do |f|%>
            <%= f.hidden_field :item_id, :value => item.id %>
            <%= f.number_field :quantity, :value => 1, :min =>  1%>
            <%= f.submit "Add to Cart "%>

          <% end %>
        </td>
       
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div id="cart">
  <%= render 'carts/cart'%>
</div>
